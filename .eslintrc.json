{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "google",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/recommended",
        "plugin:jest/recommended",
        "plugin:promise/recommended"
    ],
    "ignorePatterns": [
        "dist/"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [],
    "rules": {},
    "settings": {
        "import/resolver": {
            "typescript": {
                "alwaysTryTypes": true,
                "paths": "./tsconfig.json"
            }
        }
    }
}
