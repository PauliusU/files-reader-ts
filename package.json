{
  "name": "files-reader-ts",
  "version": "1.0.0",
  "description": "Exercise for creating endpoints related to reading of directory files and saving their status (active / deleted) into a Redux state object",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "predev": "npm run build",
    "dev": "ts-node-dev --respawn --pretty --transpile-only src/server.ts",
    "lint": "eslint src",
    "prestart": "npm run build",
    "start": "node .",
    "test": "jest",
    "watch": "tsc -w -p tsconfig.build.json"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.17.6",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.47.0",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "redux": "^4.1.2"
  }
}
